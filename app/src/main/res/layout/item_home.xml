<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    app:layout_constraintCircleRadius="5dp"
    android:layout_height="wrap_content"
    android:layout_marginRight="9dp"
    android:layout_marginLeft="9dp"
    android:layout_marginTop="9dp"
    android:layout_marginBottom="9dp">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_marginTop="13dp"
            android:layout_marginLeft="13dp"
            android:id="@+id/img_avatar"
            android:layout_width="38dp"
            android:layout_height="38dp"
              />
        <TextView
            android:layout_marginTop="13dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/tv_name"
            android:textColor="@color/dark_blue_grey"
            android:layout_toRightOf="@id/img_avatar"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_time"
            android:layout_marginLeft="10dp"
            android:textSize="10sp"
            android:typeface="serif"
            android:layout_toRightOf="@id/img_avatar"
            android:layout_below="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:id="@+id/btn_more"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="357dp"
            android:background="@drawable/btn_menu_dots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            style="@style/TextStyle28"
            android:id="@+id/tv_status"
            android:layout_marginLeft="64dp"
            android:layout_marginTop="59dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="64dp"
            android:layout_below="@+id/tv_status"
            android:id="@+id/img_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ToggleButton
            android:text=""
            android:textOn=""
            android:textOff=""
            android:layout_marginTop="24dp"
            android:layout_marginLeft="65dp"
            android:id="@+id/btn_heart"
            android:layout_below="@+id/img_status"
            android:background="@drawable/btn_heart_animation"
            android:checked="false"
            android:layout_width="24dp"
            android:layout_height="22dp"/>
        <ImageButton
            android:id="@+id/ic_cmt"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@+id/btn_heart"
            android:layout_below="@+id/img_status"
            android:background="@drawable/btn_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:typeface="monospace"
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_below="@id/img_status"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="303dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="27dp"
            android:layout_marginRight="27dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:text="$234.00"
            android:textColor="@color/dark_blue_grey"
            android:textSize="15sp" />
    </RelativeLayout>







</androidx.constraintlayout.widget.ConstraintLayout>