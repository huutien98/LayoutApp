<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".SignInActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gn_guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="40dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gn_guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="40dp" />


    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/img_blog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_blob"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/img_back"
        android:src="@drawable/img_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.062"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.072" />

    <ImageView
        android:id="@+id/img_hi_blob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_hi_blob"
        android:layout_marginTop="100dp"
        app:layout_constraintRight_toRightOf="@id/gn_guideline2"
        app:layout_constraintLeft_toLeftOf="@id/gn_guideline1"
        app:layout_constraintTop_toTopOf="parent"
          />

    <TextView
        android:id="@+id/textView"
        style="@style/TextStyle17"
        android:layout_width="243dp"
        android:layout_height="58dp"
        android:layout_marginTop="237dp"
        android:gravity="center"
        android:lineHeight="27sp"
        android:text="Hello again.
Welcome back."
        android:textColor="@color/dark_blue_grey"
        android:textSize="27sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.016" />

    <TextView
        android:id="@+id/textView2"
        style="@style/TextStyle19"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="EMAIL ADDRESS"
        android:textColor="@color/dark_blue_grey"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@id/gn_guideline2"
        app:layout_constraintLeft_toLeftOf="@id/gn_guideline1"
        app:layout_constraintTop_toTopOf="parent"
          />

    <EditText

        android:textSize="15dp"
        android:id="@+id/editTextmail"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginTop="14dp"
        android:background="@null"
        android:inputType="text"
        app:layout_constraintRight_toRightOf="@id/gn_guideline2"
        app:layout_constraintLeft_toLeftOf="@id/gn_guideline1"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/dark_two"
        app:layout_constraintRight_toRightOf="@id/gn_guideline2"
        app:layout_constraintLeft_toLeftOf="@id/gn_guideline1"
        app:layout_constraintBottom_toTopOf="@id/textView3"
        android:layout_marginBottom="10dp"
         />

    <TextView
        android:id="@+id/textView3"
        style="@style/TextStyle19"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:text="PASSWORD"
        android:textColor="@color/dark_blue_grey"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@id/gn_guideline2"
        app:layout_constraintHorizontal_bias="0.14"
         app:layout_constraintLeft_toLeftOf="@id/gn_guideline1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6" />


    <EditText
        android:textSize="15dp"
        android:id="@+id/editText2"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginTop="14dp"
        android:background="@null"
        android:inputType="textPassword"
        app:layout_constraintRight_toLeftOf="@id/tv_forgotPassword"
        app:layout_constraintLeft_toLeftOf="@id/gn_guideline1"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:gravity="right"
        android:id="@+id/tv_forgotPassword"
        style="@style/TextStyle20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="Forgot Password"
        android:textColor="@color/dark_blue_grey"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintRight_toRightOf="@id/gn_guideline2"
        app:layout_constraintLeft_toRightOf="@+id/editText2"
        app:layout_constraintTop_toTopOf="@+id/editText2" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/dark_two"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@id/gn_guideline2"
        app:layout_constraintHorizontal_bias="0.4"
         app:layout_constraintLeft_toLeftOf="@id/gn_guideline1"
        app:layout_constraintTop_toBottomOf="@+id/editText2"
        app:layout_constraintVertical_bias="0.065" />
    <Button
        android:id="@+id/button"
        android:layout_width="340dp"
        android:layout_height="58dp"
        android:background="@drawable/btn_signin"
        android:gravity="center"
        android:text="Sign in"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@id/gn_guideline2"
        app:layout_constraintLeft_toLeftOf="@id/gn_guideline1"
        app:layout_constraintTop_toBottomOf="@+id/editText2"
          />
    <TextView
        android:id="@+id/textView5"
        style="@style/TextStyle22"
        android:layout_width="135dp"
        android:layout_height="16dp"
        android:layout_marginLeft="88dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="141dp"
        android:layout_marginBottom="132dp"
        android:text="New to Friendly Desi?"
        android:textColor="@color/dark_two"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.351"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_signup"
        style="@style/TextStyle23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginRight="84dp"
        android:layout_marginBottom="132dp"
        android:text="Sign up"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/button"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_bottom_blob"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>